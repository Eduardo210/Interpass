<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/blue">

    <android.support.constraint.ConstraintLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp170"
            android:layout_marginStart="@dimen/dp60"
            android:layout_marginEnd="@dimen/dp60"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@drawable/rectangle_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <android.support.v7.widget.CardView
                android:id="@+id/cardPrede"
                android:visibility="gone"
                android:layout_marginStart="@dimen/dp15"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                app:cardBackgroundColor="@color/blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/predeterminado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_medium"
                    android:maxLines="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:text="Predeterminado" />

        </android.support.v7.widget.CardView>

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp12"
                android:layout_marginTop="@dimen/dp20"
                android:background="@drawable/content_tag"
                android:layout_marginStart="@dimen/dp15"
                android:layout_marginEnd="@dimen/dp20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/txtvNickName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/rubik_medium"
                    android:maxLines="1"
                    android:textColor="@color/blackText"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/btnEditTag"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="MibemedofdfdfdfdfbleÃºqwertyui" />

            <Button
                    android:id="@+id/btnEditTag"
                    android:layout_width="@dimen/dp24"
                    android:layout_height="@dimen/dp24"
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_marginRight="@dimen/dp16"
                    android:background="@drawable/icon_tag"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/txtvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline"
                    tools:text="$500.00" />

            <android.support.constraint.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent=".25" />

            <TextView
                    android:id="@+id/txtvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/errorRed"
                    android:textSize="14sp"
                    android:visibility="visible"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtvBalance"
                    tools:text="Disponible" />

            <TextView
                    android:id="@+id/txtvTagType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp15"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/green"
                    android:textSize="14sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtvBalance"
                    tools:text="Saldo prepago" />

            <ImageView
                    android:id="@+id/tagImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp0"
                    android:layout_marginRight="@dimen/dp15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtvTagType" />

            <TextView
                    android:id="@+id/txtvTagNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp2"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/blackText"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tagImage"
                    tools:text="02384534671 2" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>


